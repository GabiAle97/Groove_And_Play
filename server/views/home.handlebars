<h1 class="titular">Noticias</h1>
<style>
    #home{
        width: 110%;
    }
</style>
<div class="contenedor-noticias">
{{#each listaDiscos}}
    <div class="div-noticias" onclick="window.location.href='/notices/?id={{this.nombre}}|{{this.usuario}}'">
        <h4><i style="color: rgb(158, 140, 80)">{{this.usuario}}</i> acaba de subir un disco!</h4>
        <img src="./files/{{this.usuario}}/{{this.nombre}}/portada/portada-{{this.nombre}}.jpg">
        <h2>{{this.nombre}}</h2>
    </div>
{{/each}}
</div>  